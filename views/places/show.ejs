<%- include("../partials/header") %>heroku config:set GEOCODER_API_KEY=your-key-here
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">
				NatureBeauty
			</p>
			<div class="list-group">
				<li class="list-group-item">Info1</li>				
				<li class="list-group-item">Info2</li>
				<li class="list-group-item">Info3</li>
			</div>
			<div id = "map">	
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= place.image %>">
				<div class="caption">
					<h4 class="pull-right">
						$<%= place.price %>/night
					</h4>
					<h4>
						<a><%= place.name %></a>
					</h4>
					<p>
						<%= place.description %>
					</p>
					<p>
						<em>Submitted By <%= place.author.username %>, 
						<%= moment(place.createdAt).fromNow() %></em>
					</p>
					<% if(currentUser && place.author.id.equals(currentUser._id)){ %>
					<a class="btn btn-warning" href="/sights/<%= place._id %>/edit">Edit Place</a>
					<form class="delete-form" action="/sights/<%= place._id %>?_method=DELETE" method="POST">
						<button class="btn btn-danger">
							Delete
						</button>
					</form>
					<% } %>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/sights/<%= place._id %>/comments/new">Add New Comment</a>
				</div>
				<hr>
				<% place.comments.forEach(function(comment){ %>
				<div class="row">
					<div class="col-md-12">
						<strong><%= comment.author.username %></strong>
						<span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
						<p>
							<%= comment.text %>
						</p>
						<% if(currentUser && comment.author.id.equals(currentUser._id)) { %>
						<a class="btn btn-xs btn-warning" href="/sights/<%= place._id %>/comments/
							<%= comment._id%>/edit">Edit Comment</a>
						<form class="delete-form" action="/sights/<%= place._id %>/comments/
							<%= comment._id %>?_method=DELETE" method="POST">
							<button class="btn btn-xs btn-danger">
								Delete
							</button>
						</form>
						<% } %>
					</div>
				</div>
				<% }) %>
			</div>
		</div>
	</div>
</div>

<script>
	function initMap() {
    	var lat = <%= campground.lat %>;
    	var lng = <%= campground.lng %>;
    	var center = {lat: lat, lng: lng };
    	var map = new google.maps.Map(document.getElementById('map'), {
        	zoom: 8,
        	center: center,
        	scrollwheel: false
    	});
    	var contentString = `
		<strong><%= campground.name %><br />
      	<%= campground.location %></strong>
      	<p><%= campground.description %></p>
    	`
    
		var infowindow = new google.maps.InfoWindow({
      		content: contentString
    	});
    
		var marker = new google.maps.Marker({
        	position: center,
        	map: map
    	});
    
		marker.addListener('click', function() {
      		infowindow.open(map, marker);
    	});
 	}
</script>

<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCjJX5ccP_FOSU_nxcvTRhbSejRQkdkkX0&callback=initMap"></script>

<a href="/sights" class="btn btn-warning">Return</a>
<%- include("../partials/footer") %>